     <view class='left_block'>
        <view class='day_num_title' > <button  plain bindtap="jumpPage3">意见反馈</button></view>
     </view>
   </view>

   <view  class='study_set_block'>
     <view class='left_block'>
        <view class='day_num_title' > <button  plain bindtap="jumpPage4">使用指南</button></view>
     </view>
   </view>


</view>
