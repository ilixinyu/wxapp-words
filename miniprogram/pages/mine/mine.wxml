
<view class='page'>


<view class="userinfo">
    <view class='user_pic'>
       <image class='user_pic' background-size="cover" src='{{userInfo.avatarUrl}}'></image> 
   </view>
    <button class='loginbtn' plain open-type="getUserInfo"  bindgetuserinfo="auth" style="width:40%;  border:1px solid #e6f6e8;  margin-left: 4%;margin-top: 7%;color: #336839;">
    {{user_note}}
    </button>  
</view>

<view class='study_set' >

